{
    "compilerOptions": {
        // "module": "node16",
        // "target": "es2020", // set to the *lowest* target you support
        "target": "ESNext",
        "module": "NodeNext",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "NodeNext",
        // "declarationMap": true,
        // "allowImportingTsExtensions": true,
        // "noEmit": true,
        // "declaration": false,
        // "verbatimModuleSyntax": true,
        "baseUrl": ".",
        "paths": {
            "*": ["*"]
        }
    },
    "include": ["**/*.ts", "cli-builder/*"],
    "exclude": ["node_modules"]
}
