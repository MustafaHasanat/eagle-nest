{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "baseUrl": "./src",
        "paths": {
            "templates/*": ["./lib/templates/*"],
            "external/*": ["./lib/external/*"],
            "utils/*": ["./src/utils/*"],
            "__tests__/*": ["__tests__/*"],
            "*": ["*"]
        }
    },
    "include": [
        "**/*.ts",
        "src/*.(ts|txt)",
        "lib/**/*.(ts|js|txt)",
    ],
    "exclude": ["node_modules", "dist"],
    "files": ["index.ts"]
}
