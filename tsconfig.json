{
    "compilerOptions": {
        // "composite": true,
        "target": "es6",
        "module": "esnext",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "baseUrl": "./src",
        // "allowImportingTsExtensions": true,
        // "emitDeclarationOnly": true,
        // "noEmit": true,
        "paths": {
            "utils/*": ["./src/utils/*"],
            "__tests__/*": ["__tests__/*"],
            "*": ["*"]
        }
    },
    "include": ["src/*.ts"],
    "exclude": ["node_modules"],
    "files": ["src/index.ts"]
}
