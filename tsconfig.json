{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "*": ["*"]
        }
        // "declarationMap": true,
        // "allowImportingTsExtensions": true,
        // "noEmit": true,
        // "verbatimModuleSyntax": true,
    },
    "include": ["**/*.ts", "cli-builder/*"],
    "exclude": ["node_modules"]
}
